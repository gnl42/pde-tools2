<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.activities">
      <category
            description="Enable/Disable Features of PDE-Tools, Use &quot;Advanced&quot; Button to detail."
            id="me.glindholm.pdetools2.capability.category"
            name="PDE-Tools">
      </category>

   </extension>
   <extension
         point="org.eclipse.ui.activities">
               <activity
                     description="Show In Shell, Open Console Here Menu"
                     id="me.glindholm.pdetools2.capability.shell"
                     name="Shell Integration">
      </activity>
      <activityPatternBinding
            activityId="me.glindholm.pdetools2.capability.shell"
            isEqualityPattern="false"
            pattern="net\.jeeeyul\.pdetools/net\.jeeeyul\.pdetools\.shell.*">
      </activityPatternBinding>
      <categoryActivityBinding
            activityId="me.glindholm.pdetools2.capability.shell"
            categoryId="me.glindholm.pdetools2.capability.category">
      </categoryActivityBinding>
      <defaultEnablement
            id="me.glindholm.pdetools2.capability.shell">
      </defaultEnablement>
   </extension>
   
      <extension
         point="org.eclipse.ui.activities">
               <activity
                     description="Snapshot Tool and Snapshot View"
                     id="me.glindholm.pdetools2.capability.snapshot"
                     name="Snapshot Tool">
      </activity>
      <activityPatternBinding
            activityId="me.glindholm.pdetools2.capability.snapshot"
            isEqualityPattern="false"
            pattern="net\.jeeeyul\.pdetools/net\.jeeeyul\.pdetools\.snapshot.*">
      </activityPatternBinding>
      <categoryActivityBinding
            activityId="me.glindholm.pdetools2.capability.snapshot"
            categoryId="me.glindholm.pdetools2.capability.category">
      </categoryActivityBinding>
      <defaultEnablement
            id="me.glindholm.pdetools2.capability.snapshot">
      </defaultEnablement>
   </extension>
      <extension
            point="org.eclipse.ui.activities">
