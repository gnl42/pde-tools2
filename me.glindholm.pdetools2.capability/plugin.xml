         </activityPatternBinding>
         <categoryActivityBinding
               activityId="me.glindholm.pdetools2.capability.wslauncher"
               categoryId="me.glindholm.pdetools2.capability.category">
         </categoryActivityBinding>
         <defaultEnablement
               id="me.glindholm.pdetools2.capability.wslauncher">
         </defaultEnablement>
      </extension>
      <extension
            point="org.eclipse.ui.activities">
         <activity
               description="Clipboard History Feature"
               id="me.glindholm.pdetools2.capability.clipboard"
               name="Clipboard">
         </activity>
         <activityPatternBinding
               activityId="me.glindholm.pdetools2.capability.clipboard"
               isEqualityPattern="false"
               pattern="net\.jeeeyul\.pdetools/net\.jeeeyul\.pdetools\.clipboard.*">
         </activityPatternBinding>
         <categoryActivityBinding
               activityId="me.glindholm.pdetools2.capability.clipboard"
               categoryId="me.glindholm.pdetools2.capability.category">
         </categoryActivityBinding>
         <defaultEnablement
               id="me.glindholm.pdetools2.capability.clipboard">
         </defaultEnablement>
      </extension>
      <extension
            point="org.eclipse.ui.activities">
         <activity
               description="Bundle Images View"
               id="me.glindholm.pdetools2.capability.biv"
               name="Bundle Images View">
         </activity>
         <activityPatternBinding
               activityId="me.glindholm.pdetools2.capability.biv"
               isEqualityPattern="false"
               pattern="net\.jeeeyul\.pdetools/net\.jeeeyul\.pdetools\.biv.*">
         </activityPatternBinding>
         <categoryActivityBinding
               activityId="me.glindholm.pdetools2.capability.biv"
               categoryId="me.glindholm.pdetools2.capability.category">
         </categoryActivityBinding>
         <defaultEnablement
               id="me.glindholm.pdetools2.capability.biv">
         </defaultEnablement>
      </extension>
      <extension
            point="org.eclipse.ui.activities">
         <activity
               description="Crazy Outline View"
               id="me.glindholm.pdetools2.capability.crazyoutline"
               name="Crazy Outline view">
         </activity>
         <activityPatternBinding
               activityId="me.glindholm.pdetools2.capability.crazyoutline"
               isEqualityPattern="false"
               pattern="net\.jeeeyul\.pdetools/net\.jeeeyul\.pdetools\.crazyoutline.*">
         </activityPatternBinding>
         <categoryActivityBinding
               activityId="me.glindholm.pdetools2.capability.crazyoutline"
               categoryId="me.glindholm.pdetools2.capability.category">
         </categoryActivityBinding>
         <defaultEnablement
               id="me.glindholm.pdetools2.capability.crazyoutline">
         </defaultEnablement>
      </extension>
   

</plugin>
